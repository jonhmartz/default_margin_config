<odoo>
    <record id="view_margin_config_form" model="ir.ui.view">
        <field name="name">default.margin.config.form</field>
        <field name="model">default.margin.config</field>
        <field name="arch" type="xml">
            <form string="Configuración Margen">
                <sheet>
                    <group>
                        <field name="utilidad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_margin_config" model="ir.actions.act_window">
        <field name="name">Configuración Margen</field>
        <field name="res_model">default.margin.config</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_margin_config_form"/>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_margin_config_root" name="Configuración Margen" parent="sale.sale_order_menu" sequence="99"/>
    <menuitem id="menu_margin_config" name="Utilidad por Defecto" parent="menu_margin_config_root" action="action_margin_config"/>
</odoo>